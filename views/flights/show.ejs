<%- include('../partials/header') %>
<section id="show-page">
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Flight Number: </div>
  <div><%= flight.flightNo %></div>
  <div>Destination: </div>
  <% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Arrival Date</th>
          <th>Airport</th>
          
        </tr>
      </thead>
      <tbody>
        <% var total = 0 %>
        <% flight.destinations.forEach(function(r) { %>
          
          <tr>
            
            <td><%= r.arrival %></td>
            <td><%= r.airport %></td>
            
          </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destination Yet</h5>
  <% } %>

  <% tickets.forEach(t => { %>
    <h2><%= t.seat %></h2> 
  <% })%>
  
</section>
  </table>

  <br><br>
<h2>Add Destination</h2>
<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
  <label>Airport</label>
  <select name="airport">
  <option value="AUS">AUS</option>
  <option value="DAL">DAL</option>
  <option value="LAX">LAX</option>
  <option value="SEA">SEA</option>
  <label>Arrival:</label>
  <input type="date" name="arrival">
  <input type="submit" value="Add Arrival">
</form>

<a href="/flights/<%= flight._id %>/tickets/new">Get Tickets</a>



<%- include('../partials/footer') %>